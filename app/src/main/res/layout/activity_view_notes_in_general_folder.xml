<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F4F4F4"
    tools:context=".folders.categoryviews.NotesInFolder">

    <Button
        android:id="@+id/saveFolder"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="21dp"
        android:fontFamily="@font/indie_flower"
        android:text="Save"
        android:textColor="@color/buttonDisabledColor"
        android:textSize="18sp"
        app:backgroundTint="@color/buttonEnabledColor" />

    <TextView
        android:id="@+id/dateOfFolder"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="80dp"
        android:paddingStart="4dp"
        android:fontFamily="@font/indie_flower"
        android:textColor="#606060"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/folderTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/saveFolder"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="46dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/indie_flower"
        android:hint="@string/title"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="#606060"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/folderDescription"
        android:layout_width="377dp"
        android:layout_height="85dp"
        android:layout_below="@+id/folderTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="@android:color/transparent"
        android:capitalize="sentences"
        android:fontFamily="@font/indie_flower"
        android:gravity="top"
        android:hint="@string/description"
        android:textColor="@color/black"
        android:textColorHint="#606060"
        android:textSize="17sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notesInCatRV"
        android:layout_width="match_parent"
        android:layout_height="674dp"
        android:layout_marginTop="200dp"
        android:padding="16dp" />

