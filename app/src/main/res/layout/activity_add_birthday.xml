<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottomSheet"
    android:background="@drawable/sheet_background"
    tools:context=".todo.BottomSheetFragment">

    <TextView
        android:id="@+id/taskHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_margin="15dp"
        android:fontFamily="@font/indie_flower"
        android:text="Anniversaire"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="27sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/saveBirthdayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done"
        android:layout_marginTop="-43dp"
        android:layout_marginStart="315dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/birthdayName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/indie_flower"
            android:textColor="@color/black"
            android:textColorHint="#F0676565"
            android:textSize="19sp"
            android:inputType="textCapSentences"
            android:hint="Name">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/birthdayDate"
            android:layout_width="205dp"
            android:layout_height="55dp"
            android:fontFamily="@font/indie_flower"
            android:hint="@string/set_date"
            android:inputType="textCapSentences"
            android:textColor="@color/black"
            android:editable="false"
            android:textColorHint="#F0676565"
            android:textSize="19sp">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/custombtn"
        android:backgroundTint="#3E514949"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/birthdayClock"
            android:layout_width="15dp"
            android:layout_height="13dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_clock" />

        <TextView
            android:id="@+id/birthdaySelected"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/indie_flower"
            android:text="Set Birthday"
            android:textColor="#99070707"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>